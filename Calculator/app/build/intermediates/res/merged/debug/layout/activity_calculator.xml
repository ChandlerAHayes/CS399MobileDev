<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:gravity="top"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:id="@+id/str_input_display"
        android:layout_width="match_parent"
        android:layout_height="100dp"

        android:background="@android:color/background_light"
        android:textSize="45sp"
        
        android:textAlignment="textEnd"
        android:layout_gravity="end"/>

    <TextView
        android:id="@+id/str_output_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_weight="0.76"

        android:background="@android:color/background_light"
        android:textSize="45sp"

        android:textAlignment="textEnd"
        android:layout_gravity="end"/>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@color/colorPrimaryDark">

        <Button
            android:id="@+id/bttn_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:text="4"
            android:layout_margin="3dp"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bttn_five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_margin="3dp"
            android:text="5"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bttn_six"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="6"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bttn_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="-"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bttn_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_margin="3dp"
            android:layout_row="2"
            android:text="1"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bttn_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_margin="3dp"
            android:layout_row="2"
            android:text="2"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bttn_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_margin="3dp"
            android:layout_row="2"
            android:text="3"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bttn_mltply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_margin="3dp"
            android:layout_row="2"
            android:text="*"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bttn_decimal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_margin="3dp"
            android:layout_row="3"
            android:text="."
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bttn_zero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_margin="3dp"
            android:layout_row="3"
            android:text="0"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bttn_equal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_margin="3dp"
            android:layout_row="3"
            android:text="="
            android:textSize="30sp" />

        <Button
            android:id="@+id/bttn_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_margin="3dp"
            android:layout_row="0"
            android:text="+"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bttn_nine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_margin="3dp"
            android:layout_row="0"
            android:text="9"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bttn_eight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_margin="3dp"
            android:layout_row="0"
            android:text="8"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bttn_seven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_margin="3dp"
            android:layout_row="0"
            android:text="7"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bttn_divide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_margin="3dp"
            android:layout_row="3"
            android:text="/"
            android:textSize="30sp" />

    </GridLayout>

    <Button
        android:id="@+id/bttn_clear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_marginTop="20dp"
        android:layout_row="0"
        android:text="CLEAR"
        android:textSize="30sp" />


</LinearLayout>
