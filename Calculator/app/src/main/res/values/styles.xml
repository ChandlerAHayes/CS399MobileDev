<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:buttonStyle">@style/ButtonAppTheme</item>
    </style>

    <!--https://stackoverflow.com/questions/26346727/android-material-design-button-styles-->
    <style name="ButtonAppTheme" parent="android:Widget.Material.Button">
        <item name="android:background">@drawable/bttn_selector</item>
        <item name="android:textColor">?android:attr/textColorSecondaryInverseNoDisable</item>
        <item name="android:layout_margin">10dp</item>
    </style>

</resources>
