<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="educs399.nau.anagram.PlayGame">

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"

            android:text="Play Game"
            android:textSize="50sp" />

    <TextView
        android:id="@+id/txt_anagram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"

        android:text="LEMON"
        android:textSize="30sp"
        android:layout_below="@+id/txt_title"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/txt_answer"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/txt_timer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/txt_answer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />

        <Button
            android:id="@+id/score_bttn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"

            android:layout_below="@+id/txt_answer"
            android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/txt_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score"
        android:layout_alignBaseline="@+id/score_bttn"
        android:layout_alignBottom="@+id/score_bttn"
        android:layout_toLeftOf="@+id/txt_title"
        android:layout_toStartOf="@+id/txt_title" />

    <TextView
        android:id="@+id/txt_numQuestions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/score_bttn"
        android:layout_alignBottom="@+id/score_bttn"
        android:layout_toEndOf="@+id/txt_answer"
        android:layout_toRightOf="@+id/txt_answer"
        android:text="1 out of 5" />

    <Button
        android:id="@+id/quit_bttn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/score_bttn"
        android:layout_alignParentBottom="false"
        android:layout_alignRight="@+id/score_bttn"
        android:layout_below="@+id/score_bttn"
        android:text="Quit" />

</RelativeLayout>